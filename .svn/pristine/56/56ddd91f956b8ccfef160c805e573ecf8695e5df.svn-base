            },
            subtitle: {
                text: ' '
            },
            xAxis: {
                gridLineWidth: 1,
                maxPadding: 0,
                min: 0,
                max: xMax,
                // không cho phép lẻ
                allowDecimals: false,
                title: {
                    // tslint:disable-next-line:max-line-length
                    text: '<span style="font-family:Roboto, sans-serif; text-align:right;font-weight:bold;color:#23282c">High ' + ox + '</span>',
