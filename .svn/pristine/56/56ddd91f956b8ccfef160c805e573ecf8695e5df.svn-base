                        // allowOverlap: true // cho phép show all
                    }
                },
                bubble: {
                    minSize: 8,
                    maxSize: 50,
                }
            },
            series: [{
                data: chart,
                marker: {
                    fillColor: {
                        radialGradient: { cx: 0.5, cy: 0.3, r: 0.3 },
