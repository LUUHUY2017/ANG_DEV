                        },
                        text: avg_ox
                    },
                    zIndex: 3
                }]
            },
            yAxis: {
                startOnTick: false,
                endOnTick: false,
                title: {
                    text: '</br> <span  style="font-family:Roboto, sans-serif;font-weight:bold;color:#23282c">High ' + oy + '</span>',
                    margin: 10,
                    align: 'high'
                },
                labels: {
                    format: '{value} '
                },
                maxPadding: 0,
                // không cho phép lẻ
                allowDecimals: false,
                min: 0,
                max: yMax,
                plotLines: [{
                    color: 'red',
                    dashStyle: 'dot',
                    width: 1,
                    value: avg_oy,
                    label: {
                        align: 'right',
                        style: {
                            fontStyle: 'italic'
                        },
