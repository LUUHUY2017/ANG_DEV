body{
  font-family: Roboto,sans-serif;
}
.card-administration{
/* border-radius: 0.25rem; */
/* box-shadow: inset 0 1px 1px rgba(0,0,0,.05); */
background: #ffffff;
}
.select-white{
  background: white;
}
.label-admi{
  font-weight: bold; 
}
input.nofocus {
    border: 1px solid #ddd;
    border-radius: unset !important;
    height: 31px;
}  
input.nofocus:focus{
  box-shadow:unset;
  border-radius: unset !important;
}  
.formsearch{
  padding-left: 0px;
  margin-bottom: 0px;
}
ng-select.backselect{
  background: white;
}
ng-select.backselect .below{
  background: white;
}
ng-select.backselect .clear{
  display: none;
}
.buton-search{
  height: 30px;
  line-height: 15px;
}
button.btn.btn-them.form-control.buton-search:hover {
  background: #e6e6e6;
}

ng-select.select-white>div:focus,input.select-white:focus{
  border-color: rgba(82,168,236,.8);
    outline: 0;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
    -moz-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(82,168,236,.6);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
}
.btn-them{
  color:#333;
   background-color: #f5f5f5;
   border-color: rgba(0,0,0,.1)rgba(0,0,0,.1)#b3b3b3;
}
.btn-them:focus{
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6); 
  color:#333;
  background-color: #f5f5f5;  
  border-color: rgba(0,0,0,.1)rgba(0,0,0,.1)#b3b3b3;
}
.btn-huy{
  margin-right: 8px;
  background-color: #e5e5e5;
  color: #23282c;
  border-color: #e5e5e5
}
.error-message{
  color: crimson;
  font-style: italic;
}
.form-no-marbottom{
  margin-bottom: 3px;
}
.form-no-marbottom li{
  list-style: none;
}
.form-no-marbottom >.lh-label{
 line-height: 35px;
}
.form-no-marbottom ng-select>div:focus,.form-no-marbottom input:focus{
  border-color: rgba(82,168,236,.8);
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
  -moz-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(82,168,236,.6);
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
}
.card-adminstrastion .pi{
  font-size: 12px;
}
.modal-footer,.modal-header{
  padding: 5px 1rem;
}
/*Modal hỏi xóa*/
.box-shadow
{
  box-shadow: 2px 2px 3px rgba(2, 2, 2, 0.24) !important;
}
#border-remove
{
  width: fit-content;
  margin: auto;
  padding: 10px 15px;
  border-radius: 50%;
  border: 2px solid #9c1b1b;
}
#border-remove>i
{
  color: #9c1b1b;
}
