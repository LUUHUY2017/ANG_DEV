  /*Tạo nút checkbox đánh giá*/
.cfm-question >.container {
    display: block;
    position: relative;
    cursor: pointer;
    font-size: 22px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
  
  /* Hide the browser's default checkbox */
  .cfm-question >.container input {
    position: absolute;
    display: none;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }
  
  /* Create a custom checkbox */
  .checkmark {
    position: absolute;
    height: 19px;
    width: 19px;
    background-color: #ddd;
  }
  
  /* On mouse-over, add a grey background color */
  .cfm-question >.container:hover input ~ .checkmark {
    background-color: #ccc;
  }
  .opacity-check{
      opacity: 0.75;
  }
  /* When the checkbox is checked, add a blue background */
  .cfm-question >.container input:checked ~ .checkmark {
    background-color: #2196F3;
  }
  
  /* Create the checkmark/indicator (hidden when not checked) */
  .checkmark:after {
    content: "";
    position: absolute;
    display: none;
  }
  
  /* Show the checkmark when checked */
  .cfm-question >.container input:checked ~ .checkmark:after {
    display: block;
  }
  
  /* Style the checkmark/indicator */
  .cfm-question >.container .checkmark:after {
    left: 7px;
    top: 4px;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0px 2px 2px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
  }
