.spancell {
  font-size: 11px;
  font-family: "Roboto", sans-serif;
  color: #9e9e9e;
  font-style: italic;
}

#headmapmenu.selecttimeview {
  width: 80px;
  margin-left: 5px;
  margin-right: 5px;
}

#headmapmenu {
  width: 100%;
}

#headmapmenu input[type="text"] {
  width: 110px !important;
  padding-left: 4px !important;
}

#headmapmenu li {
  list-style: none;
}

#headmapmenu > li:nth-child(1) {
  float: left;
}

#headmapmenu > li:nth-child(2) {
  float: right;
}

#headmapmenu {
  margin: 0;
  padding: 0 8px;
}

.fa-caret-down {
  padding-left: 3px;
}

input.form-control {
  color: black !important;
}

.email-app nav .nav-link {
  font-weight: bold;
  cursor: pointer;
}

.email-app nav .nav-item {
  position: relative;
  background: whitesmoke;
}

/*Chỉnh vị trí hiển thị khung chọn ngày cụ thể*/
.daterangepicker {
  top: 25px !important;
  left: auto !important;
  right: 0px !important;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.2), 0 1px 1px 0 rgba(0, 0, 0, 0.14), 0 2px 1px -1px rgba(0, 0, 0, 0.12) !important;
}
.daterangepicker .drp-buttons .drp-selected {
  font-weight: bold;
}
.daterangepicker td.active,
.daterangepicker td.active:hover {
  background-color: orangered;
}

.daterangepicker.opensright::before,
.daterangepicker.opensright::after {
  /* left: 50% !important; */
  display: none;
}

.applyBtn,
.applyBtn:hover {
  background-color: orangered !important;
  border-color: orangered !important;
  border-radius: unset;
}
.cancelBtn {
  border-radius: unset;
}
