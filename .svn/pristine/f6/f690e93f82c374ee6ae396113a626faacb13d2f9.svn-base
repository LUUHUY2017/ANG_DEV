.time-period-comparison > app-timeperiod {
  width: fit-content;
  display: inline-block;
  position: relative;
}
.time-period-comparison {
  width: fit-content;
  float: right;
}
:host ::ng-deep {
  .starttime {
    width: fit-content !important;
    > div {
      width: 100px;
      min-width: 100px;
    }
  }
  .endtime {
    width: fit-content !important;
    > div {
      width: 100px;
      min-width: 100px;
    }
  }
  .select2 {
    width: fit-content !important;
    > div {
      width: 160px !important;
      min-width: 160px !important;
    }
  }
}
@media only screen and (max-width: 768px) {
  .time-period-comparison {
    float: left;
  }
}
.table-comparation tr th {
  border-bottom: 1px solid #e4eaef !important;
  border-top: unset !important;
}
.foot-title-show {
  line-height: 19px;
  color: #7b7b7b;
  font-size: 11px;
  font-weight: normal;
  font-family: "Roboto", sans-serif;
  padding: 8px 0 8px 20px;
}
.foot-title-show .title-show2 {
  padding-left: 10px;
  padding-right: 10px;
}
.input_no_time1 #headtimeperiod ul#ul-time li:first-child {
  display: none;
}
.input_no_time2 #headtimeperiod ul#ul-time li:first-child {
  display: none;
}
span.spancell .fa-caret-down {
  color: red !important;
  float: left;
  font-size: 13px;
  line-height: 20px;
}
span.spancell .fa-caret-up {
  color: green !important;
  float: left;
  font-size: 13px;
  line-height: 20px;
}
span.spancell .fa-sort {
  color: #c8ced3 !important;
  float: left;
  font-size: 11px;
  line-height: 20px;
}